#!/bin/bash

pkgname="bash"
pkgver="5.2.37"

sources=(
	"https://ftp.gnu.org/gnu/bash/bash-$pkgver.tar.gz"
)

depends=(
	glibc
	readline
	ncurses
)

makedepends=(
	glibc
	gcc
	binutils
	make
	sed
	gawk
	grep
	readline
	ncurses
)

glue_bin=1

function build() {
	cd bash-$pkgver
	./configure --prefix=/usr \
		--without-bash-malloc \
		--with-installed-readline \
		--docdir=/usr/share/doc/bash-$pkgdir
	make
	make DESTDIR=$pkgdir install
	ln -sv bash $pkgdir/usr/bin/sh
}
