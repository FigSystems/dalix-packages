#!/bin/bash

pkgname="libtool"
pkgver="2.5.4"

sources=(
  "https://ftp.gnu.org/gnu/libtool/libtool-$pkgver.tar.xz"
)

depends=(
  glibc
)

makedepends=(
  glibc
  gcc
  binutils
  make
  sed
  gawk
  grep
  m4
  diffutils
)

function build() {
  cd libtool-$pkgver
  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install
  rm -fv $pkgdir/usr/lib/libltdl.a
}
